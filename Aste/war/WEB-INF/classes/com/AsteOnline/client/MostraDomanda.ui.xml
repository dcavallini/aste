<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
				div{
				border-radius: 5px;
		 		background-color: #f2f2f2;
		  		padding: 20px;
				}
			input[type=text]{
			    width: 100%;
			  padding: 12px;
			  border: 1px solid #ccc;
			  border-radius: 4px;
			  resize: vertical;
			}
			
			
			* {
		  box-sizing: border-box;
		}
		
		
		p {
		  padding: 12px 12px 12px 0;
		  display: inline-block;
		}
		
		
		.col-25 {
		  float: left;
		  width: 25%;
		  margin-top: 6px;
		}
		
		.col-75 {
		  float: left;
		  width: 75%;
		  margin-top: 6px;
		}
		
		/* Clear floats after the columns */
		.row:after {
		  content: "";
		  display: table;
		  clear: both;
		}
		
			
	
	</ui:style>
	<g:HTMLPanel>
	<p ui:field="question"></p>
	<p ui:field="user"></p>
	 <p ui:field="answer"></p>
	 <input type="text" ui:field="risposta" placeholder="Inserisci la risposta"></input>
	 <g:Button text="Invia Risposta" ui:field="inviaRisposta"/>
	 <hr></hr>
	</g:HTMLPanel>
</ui:UiBinder> 